<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


	<RelativeLayout 
	    android:id="@+id/layoutActivitySchedule"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
   		android:paddingTop="@dimen/activity_vertical_margin"
    	 >

    	<TextView
        	android:id="@+id/textViewSelectMessage"
     		android:layout_marginTop="15dp"
     		android:textSize="20sp"
        	android:textColor="@color/common_signin_btn_text_light"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/messageCalculateSchedule" />
    
    
		<TimePicker
        	android:id="@+id/timePickerStart"
        	android:layout_below="@+id/textViewSelectMessage"
        	android:layout_marginTop="15dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
    
    	<TimePicker
        	android:id="@+id/timePickerEnd"
        	android:layout_toRightOf="@+id/timePickerStart"
        	android:layout_alignBaseline="@+id/timePickerStart"
        	android:layout_below="@+id/textViewSelectMessage"
        	android:layout_marginTop="15dp"
        	android:layout_marginLeft="20dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
    
    

	</RelativeLayout>
	
 </ScrollView>	
