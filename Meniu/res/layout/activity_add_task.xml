<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    
    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	

    	<TextView
        	android:id="@+id/domain"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/domain" />
    
   		<Spinner
        	android:id="@+id/spinner1"
        	android:layout_below="@+id/domain"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:entries="@array/country_arrays"
        	android:prompt="@string/country_prompt" />
    
    
    	<TextView
  	      	android:id="@+id/priority"
    	  	android:layout_below="@+id/spinner1"
        	android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
        	android:text="@string/priority" />
    
    
    	<Spinner
        	android:id="@+id/spinner2"
        	android:layout_below="@+id/priority"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:entries="@array/priority_arrays"
        	android:prompt="@string/priority_prompt" />
    
    
    	<TextView
        	android:id="@+id/repeatable"
        	android:layout_below="@+id/spinner2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/Repeatable" />
 
    	 <Spinner
        	android:id="@+id/spinner3"
        	android:layout_below="@+id/repeatable"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:entries="@array/repeatable_arrays"
        	android:prompt="@string/repeatable_prompt" />
     
     
     	<TextView
        	android:id="@+id/startTime"
        	android:layout_below="@+id/spinner3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/StartTime" />
     
      	<TimePicker
        	android:id="@+id/timePicker1"
        	android:layout_below="@+id/startTime"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
      
       <TextView
        	android:id="@+id/endTime"
        	android:layout_below="@+id/timePicker1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/EndTime" />
     
      	<TimePicker
        	android:id="@+id/timePicker2"
        	android:layout_below="@+id/endTime"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
     


	</RelativeLayout>
	
</ScrollView>	
